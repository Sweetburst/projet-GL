{% extends 'base.html.twig' %}
{% form_theme formUser 'bootstrap_4_layout.html.twig' %}
	{% block title %}
Modification informations
{% endblock %}
	{% block stylesheets %}
	{{  parent() }}
		<style>
@media(max-width: 767px) {
	.hidden-xs {
		display: none !important;
	}
	@media(max-width: @screen-xs) {
		body {
			font-size: 10px;
		}
	}

	@media(max-width: @screen-sm) {
		body {
			font-size: 14px;
		}
	}


