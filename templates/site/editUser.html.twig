	{{form_row(formUser.Email, {'attr':{'placeholder': "Mail"}})}}
	{{form_row(formUser.NumeroTelephone, {'attr':{'placeholder': "Numéro de téléphone"}}
	)}}
		<button type="submit" class="btn btn-success"> Modifiez vos informations</button>
	{{form_end(formUser)}}
{% endblock %}
